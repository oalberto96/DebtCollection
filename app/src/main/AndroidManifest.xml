<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.glassy.salesmanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Client.ClientActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".Client.AddClient.AddClientActivity"
            android:parentActivityName=".Client.ClientActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Client.ClientActivity" />
        </activity>
        <activity
            android:name=".Client.EditClient.EditClientActivity"
            android:parentActivityName=".Client.ReadClient.ReadClientActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Client.ReadClient.ReadClientActivity" />
        </activity>
        <activity android:name=".Client.ReadClient.ReadClientActivity"
            android:parentActivityName=".Client.ClientActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Client.ClientActivity" />
        </activity>
        <activity android:name=".Product.ProductActivity" />

        <activity android:name=".Product.EditProduct.EditProductActivity"
            android:parentActivityName=".Product.ReadProduct.ReadProductActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Product.ReadProduct.ReadProductActivity" />
        </activity>

        <activity android:name=".Product.AddProduct.AddProductActivity"
            android:parentActivityName=".Product.ProductActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Product.ProductActivity" />
        </activity>

        <activity android:name=".Product.ReadProduct.ReadProductActivity"
            android:parentActivityName=".Product.ProductActivity"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Product.ProductActivity" />
        </activity>

        <activity android:name=".Sale.SaleActivity" />
        <activity android:name=".Sale.AddSaleActivity" />
        <activity android:name=".Stats.StatsActivity" />
    </application>

</manifest>