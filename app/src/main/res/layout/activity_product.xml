<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/my_action_bar"
        layout="@layout/actionbar"></include>

    <Button
        android:layout_below="@id/my_action_bar"
        android:id="@+id/btn_new_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickbtnNewProduct"
        android:text="@string/btn_add_new_product" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_products"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_new_product">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
